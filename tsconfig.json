{
	"compilerOptions": {
		"module": "commonjs",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"target": "es6",
		"strict": true,
		"moduleResolution": "node",
		"sourceMap": true,
		"outDir": "dist",
		"resolveJsonModule": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
	},
	"include": ["./global.d.ts", "src/**/*", "test/**/*"]
}